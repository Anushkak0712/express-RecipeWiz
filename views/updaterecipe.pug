doctype html
html
  head
    title Update Recipe
  body
    h1 Update Recipe
    form(action="/home/profile/updaterecipe" method="POST" enctype="multipart/form-data")
      input(type="hidden" name="id" value=id)
      label(for="title") Title:
      input(type="text" id="title" name="title" value=title required)

      label(for="description") Description:
      input(type="text" id="description" name="description" value=description required)

      label(for="cuisine") Cuisine:
      input(type="text" id="cuisine" name="cuisine" value=cuisine required)

      label(for="ingredients") Ingredients:
      textarea(id="ingredients" name="ingredients" required)= ingredients

      label(for="details") Details:
      textarea(id="details" name="details" required)= details

      if image
        label(for="image") Image URL:
        input(type="file" id="image" name="image" value=image)

      button(type="submit") Update Recipe
