doctype html
html
  head
    title Recipe
    link(rel="stylesheet" href="/path/to/your/css/recipe.css")
    link(
      crossorigin="anonymous" 
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" 
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" 
      rel="stylesheet"
      )
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .recipe-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        width: 100%;
        overflow: hidden;
      }

      .recipe-header {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
      }

      .image-container {
        position: relative;
      }

      .image-container img {
        width: 100%;
        height: auto;
        display: block;
      }

      .recipe-title {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(255, 255, 255, 0.8);
        padding: 10px 20px;
        border-radius: 5px;
        text-align: center;
      }

      .recipe-title h1 {
        margin: 0;
        font-size: 24px;
      }

      .recipe-title p {
        margin: 0;
        font-size: 16px;
        color: #555;
      }

      .recipe-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 20px;
        background-color: #f9f9f9;
      }

      .recipe-info span {
        font-size: 14px;
        color: #555;
        margin-bottom: 10px;
      }

      .recipe-content {
        display: flex;
        padding: 20px;
        margin-right:30px;
      }

      .ingredients, .directions {
        padding: 10px;
      }
      .ingredients{
        flex: 0 0 30%;
      }
      .directions{
        flex: 0 0 70%;
      }

      .ingredients h2, .directions h2 {
        font-size: 20px;
        margin-bottom: 10px;
      }

      .ingredients ul, .directions ol {
        margin: 0;
        padding: 0;
      }

      .ingredients li, .directions li {
        margin-bottom: 10px;
        font-size: 14px;
        color: black;
      }

      .notes {
        padding: 10px;
        background-color: #f9f9f9;
        border-top: 1px solid #ddd;
      }

      .notes h2 {
        font-size: 20px;
        margin-bottom: 10px;
      }

      .notes p {
        margin: 0;
        font-size: 14px;
        color: #555;
      }
  body
    .recipe-container
      .recipe-header
        .image-container
          img(src=recipe.image alt="Vegetable Pirogue")
          .recipe-title
            h1 #{recipe.title}
        .recipe-info
          span Rating:
            .col-12
              span#1star.fa.fa-star
              span#2star.fa.fa-star
              span#3star.fa.fa-star
              span#4star.fa.fa-star
              span#5star.fa.fa-star
              script(type="text/javascript").
                $(document).ready(function () {
                  var recipe = !{JSON.stringify(recipe)};
                  let totalRating = recipe.totalRating;
                  for (let i = 0; i < totalRating; i++) {
                    document.getElementById((i+1)+'star').style.color='orange'
                  }
                  });
          span Cuisine: #{recipe.cuisine}
          span Cooking Time: #{recipe.timeRequired}
      .recipe-content
        .ingredients
          h2 Ingredients
          if recipe.ingredients && recipe.ingredients.length
            ul
              each ingredient in recipe.ingredients
                li #{ingredient}
          else
            p No ingredients listed.
        .directions
          h2 Directions
          if recipe.details
          ul
            each step in recipe.details.split('\n')
              li #{step}
      form(
      method="POST" 
      action="/home/viewRecipe/rating"
      )
          label(for="star") Rating
          select#star(
              required="" 
              name="star"
              )
              option(value="5") 5
              option(value="4") 4
              option(value="3") 3
              option(value="2") 2
              option(value="1") 1
          input(type="hidden" name="recipe_id" value=recipe._id)
          button(type="submit") Rate