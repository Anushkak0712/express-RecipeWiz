doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Recipe View
    link(
      crossorigin="anonymous" 
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" 
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" 
      rel="stylesheet"
      )
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #fff;
        color: #333;
        margin: 0;
        padding: 0;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
      .header {
        text-align: center;
      }
      .header h1 {
        color: #28a745; /* Primary Color */
      }
      .header p {
        color: #6c757d; /* Secondary Color */
        margin: 5px 0;
      }
      .content {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
      }
      .image-container {
        flex: 1;
        position: relative;
        width: 100%;
        max-width: 400px; /* Optional: Limit the max width */
        
        overflow: hidden;
        border-radius: 5px;
      }
      .image-container img {
        margin:40px;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
      }
      .ingredients {
        flex: 1;
        min-width: 300px;
      }
      .ingredients h2, .instructions h2 {
        color: #dc3545; /* Accent Color */
        border-bottom: 2px solid #dc3545;
        padding-bottom: 5px;
      }
      .instructions {
        margin-top: 20px;
      }
      .instructions ol {
        padding-left: 20px;
      }
      .instructions li {
        margin-bottom: 10px;
      }
  body
    .container
      .header
        h1 #{recipe.title}
        p Rating: #{recipe.totalRating}
        .col-12
          span#1star.fa.fa-star
          span#2star.fa.fa-star
          span#3star.fa.fa-star
          span#4star.fa.fa-star
          span#5star.fa.fa-star
        script(type="text/javascript").
          $(document).ready(function () {
            var recipe = !{JSON.stringify(recipe)};
            let totalRating = recipe.totalRating;
            for (let i = 0; i < totalRating; i++) {
              document.getElementById((i+1)+'star').style.color='orange'
            }
            });
        p
          | Cuisine: 
          span #{recipe.cuisine}
        p Author: #{recipe.username}
        p Date: #{recipe.sharedAt}
      .content
        .image-container
          img(src='/images/login-bg2.jpg', alt=recipe.title)
        .ingredients
          h2 Ingredients
          if recipe.ingredients && recipe.ingredients.length
            ul
              each ingredient in recipe.ingredients
                li #{ingredient}
          else
            p No ingredients listed.
      .instructions
        h2 Instructions
        if recipe.details
          ul
            each step in recipe.details.split('\n')
              li #{step}
        form(
        method="POST" 
        action="/home/viewRecipe/rating"
        )
            label(for="star") Rating
            select#star(
                required="" 
                name="star"
                )
                option(value="5") 5
                option(value="4") 4
                option(value="3") 3
                option(value="2") 2
                option(value="1") 1
            input(type="hidden" name="recipe_id" value=recipe._id)
            button(type="submit") rate
            
